@model ControleEstoque.App.Dtos.FornecedorCommand;
    <script src="~/js/cadastrarFornecedor.js"></script>
    <div class="container">
        <section class="section">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card">
                        <div class="card-body">
                            <form asp-action="Cadastrar">
                                <div class="container mt-3">
                                    <h2>Cadastrar Fornecedor</h2>
                                    <br>
                                    <!-- Nav tabs -->
                                    <ul class="nav nav-tabs" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" data-bs-toggle="tab" href="#fornecedor">Dados</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" data-bs-toggle="tab" href="#contato">Contato</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" data-bs-toggle="tab" href="#endereco">Endereço</a>
                                        </li>
                                    </ul>

                                    <!-- paine de dados -->

                                    <div class="tab-content">
                                        <div id="fornecedor" class="container tab-pane active">
                                            <br>
                                            <h3>Dados</h3>
                                            <br />
                                            <div class="row mb-3">
                                                <label for="inputText" class="col-sm-2 col-form-label">Nome</label>
                                                <div class="col-sm-10">
                                                    <input asp-for="Nome" type="text" class="form-control">
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <label for="inputEmail" class="col-sm-2 col-form-label">Razão social</label>
                                                <div class="col-sm-5">
                                                    <input asp-for="RazaoSocial" id="RazaoSocial" type="text" class="form-control">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label class="col-sm-2 col-form-label">Tipo de Pessoa</label>
                                                <div class="col-sm-5">
                                                    <select class="form-select" aria-label="Default select example">
                                                        <option selected> </option>
                                                        <option value="1">Fisica</option>
                                                        <option value="2">Juridica</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="inputPassword" class="col-sm-2 col-form-label">Numero de documento</label>
                                                <div class="col-sm-5">
                                                    <input asp-for="NumDocumento" type="text" class="form-control">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="inputNumber" class="col-sm-2 col-form-label">Email</label>
                                                <div class="col-sm-10">
                                                    <input asp-for="Email" type="email" class="form-control">
                                                </div>
                                            </div>

                                            <br />
                                        </div>
                                        <!-- fim painel de dados -->
                                        <!-- painel de contato -->
                                        <div id="contato" class="container tab-pane fade">
                                            <br>
                                            <h3>Contato</h3>
                                            <br />
                                            <div class="row mb-3">
                                                <label class="col-sm-2 col-form-label">Tipo de Telefone</label>
                                                <div class="col-sm-5">
                                                    <select class="form-select" aria-label="Default select example">
                                                        <option selected> </option>
                                                        <option value="1">Pessoal</option>
                                                        <option value="2">Comercial</option>
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="row mb-8">
                                                <label for="inputText" class="col-sm-2 col-form-label">Telefone</label>
                                                <div class="col-sm-5">
                                                    <input asp-for="Contato.Numero" type="text" class="form-control">
                                                </div>
                                            </div>

                                            <br />
                                        </div>
                                        <!-- fim painel de contato -->
                                        <!-- painel de endereço -->
                                        <div id="endereco" class="container tab-pane fade">
                                            <br>
                                            <h3>Endereço</h3>
                                            <br />
                                            <div class="row mb-3">
                                                <label for="inputPassword" class="col-sm-2 col-form-label">CEP</label>
                                                <div class="col-sm-4">
                                                    <input asp-for="Endereco.CEP" id="cep" type="text" maxlength="9" focusout="pesquisarCep()" onkeyup="handleCep(event)" class="form-control">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="inputText" class="col-sm-2 col-form-label">Logradouro</label>
                                                <div class="col-sm-8">
                                                    <input asp-for="Endereco.Logradouro" type="text" class="form-control">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="inputPassword" class="col-sm-2 col-form-label">Numero</label>
                                                <div class="col-sm-8">
                                                    <input asp-for="Endereco.Numero" type="text" class="form-control">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="inputPassword" class="col-sm-2 col-form-label">Bairro</label>
                                                <div class="col-sm-8">
                                                    <input asp-for="Endereco.Bairro" type="text" class="form-control">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="inputPassword" class="col-sm-2 col-form-label">Cidade</label>
                                                <div class="col-sm-8">
                                                    <input asp-for="Endereco.Cidade" type="text" class="form-control">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <label for="inputPassword" class="col-sm-2 col-form-label">Estado</label>
                                                <div class="col-sm-8">
                                                    <input asp-for="Endereco.Estado" type="text" class="form-control">
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <label for="inputPassword" class="col-sm-2 col-form-label">Pais</label>
                                                <div class="col-sm-8">
                                                    <input asp-for="Endereco.Pais" type="text" class="form-control">
                                                </div>
                                            </div>
                                            <br />
                                            <div class="d-grid gap-2 col-6 mx-auto">
                                                <button class="btn btn-primary btn-lg" type="submit">Cadastrar</button>
                                            </div>

                                            <br />
                                        </div>
                                        <!-- fim painel de endereço -->




                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
